{
  "name": "npm-stats-api",
  "version": "1.2.2",
  "description": "Node Package's Statistics API | Our functions will provide statistics of node package | This is a Node.js API wrapper for the NPM API and Registry. Based on the original npm-stat-api.",
  "main": "index.js",
  "files": [
    "index.js",
    "lib/*.js",
    "app.js"
  ],
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "superagent": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.19.4",
    "babel": "6.23.0",
    "dayjs": "1.11.5",
    "esm": "3.2.25",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-prettier": "4.0.0",
    "husky": "8.0.1",
    "jest": "29.2.0",
    "prettier": "2.7.1"
  },
  "scripts": {
    "dev": "gulp",
    "babel:index": "gulp babel:index",
    "babel:lib": "gulp babel:lib",
    "format": "prettier --write 'test/*'",
    "test": "jest ./test/*",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kkeeth/npm-stats-api.git"
  },
  "keywords": [
    "api",
    "npm",
    "api npm",
    "npm stats",
    "npm api",
    "npm stats api",
    "npm stat",
    "npm package details",
    "npm package",
    "npm package stats",
    "npm package api",
    "npm stat details"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kkeeth/npm-stats-api/issues"
  },
  "homepage": "https://github.com/kkeeth/npm-stats-api#readme",
  "volta": {
    "node": "16.18.0"
  }
}
